<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Add A New Dish!</title>
</head>
<body>
    <h1>Add a new Dish!</h1>
    <a href="/">Home</a>
    @model Dish
    <form asp-action="UpdateDish" asp-controller="Home" method="POST">
        <span asp-validation-for="Chef"></span>
        <label asp-for="Chef">Chef's Name: </label>
        <input type="text" asp-for="Chef" placeholder="@Model.Chef">
        <br>

        <span asp-validation-for="Name"></span>
        <label asp-for="Name">Name of Dish: </label>
        <input type="text" asp-for="Name" placeholder="@Model.Name">
        <br>

        <span asp-validation-for="Calories"></span>
        <label asp-for="Calories"># of Calories:</label>
        <input type="text" asp-for="Calories" placeholder="@Model.Calories">
        <br>

        <span asp-validation-for="Tastiness"></span>
        <label asp-for="Tastiness">Tastiness</label>
        <select asp-for="Tastiness">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <br>

        <span asp-validation-for="Description"></span>
        <label asp-for="Description">Description: </label><br>
        <textarea asp-for="Description" rows="5">@Model.Description</textarea>
        <br>
        <input type="hidden" asp-for="DishId" value="@Model.DishId">
        <input class="btn" type="submit" value="Edit Dish">
    </form>
    
</body>
</html>